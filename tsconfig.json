{
  "compilerOptions": {
    /* --- Основные настройки --- */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node16",
    "types": ["jest"],
    "allowJs": false,
    "checkJs": false,

    /* --- Безопасность и строгая типизация --- */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* --- Совместимость и комфорт разработки --- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* --- Вывод --- */
    "noEmit": true,
    "outDir": "./dist",
    "sourceMap": true
  },

  "include": [
    "src/**/*",
    "src/types/**/*",
    "custom.d.ts",
    "vite.config.ts",
    "server.js",
    "jest.config.cjs",
    "eslint.config.mjs",
    ".loaderrc.mjs",
    "src/test/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**/*",
    "**/__dirname/**"
  ]
}



