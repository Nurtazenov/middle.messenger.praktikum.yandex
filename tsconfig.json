{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ESNext",  
    "lib": ["DOM", "ESNext"],
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*",
    "src/types/**/*",
    "custom.d.ts",
    "./vite.config.ts",
    "./server.js",
    "jest.config.cjs",
    "./eslint.config.mjs",
    "./.loaderrc.mjs",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "dist",
    "__dirname",
    "**/dist/**/*",
    "**/__dirname/dist/**/*"
  ]
}


