{
  "compilerOptions": {
    "target": "es6",                          // Указывает целевую версию JavaScript
    "module": "commonjs",                     // Указывает систему модулей
    "strict": true,                           // Включает строгий режим проверки типов
    "esModuleInterop": true,                  // Разрешает совместное использование модулей ES
    "skipLibCheck": true,                     // Пропускать проверку типов в файлах библиотек
    "forceConsistentCasingInFileNames": true // Обеспечить согласованность регистров имён файлов
  },
  "include": [
    "src/**/*"                                // Указывает, какие файлы компилировать
  ],
  "exclude": [
    "node_modules",                           // Исключает папку с зависимостями
    "**/*.spec.ts"                            // Исключает файлы с тестами (опционально)
  ]
}
